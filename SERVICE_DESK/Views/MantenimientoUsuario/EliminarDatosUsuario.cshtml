    var data = ViewBag.usuarios as SERVICE_DESK.Models.Usuario;
}

@if (usuarioNombres != "Invitado")
{
    ViewBag.Title = "Revisar Tickets";
    Layout = "~/Views/Shared/_Plantillaticketera.cshtml";
}
else
